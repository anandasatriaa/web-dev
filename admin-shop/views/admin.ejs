<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin Toko</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-100 p-5 md:p-10" x-data="{ tab: 'transaksi' }">

    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-gray-800">Manajemen Toko</h1>

        <div class="flex border-b border-gray-300 mb-6">
            <button 
                @click="tab = 'transaksi'" 
                :class="tab === 'transaksi' ? 'border-b-2 border-blue-500 text-blue-600' : 'text-gray-500 hover:text-gray-700'"
                class="py-2 px-6 font-semibold transition">
                Input Transaksi
            </button>
            <button 
                @click="tab = 'inventory'" 
                :class="tab === 'inventory' ? 'border-b-2 border-blue-500 text-blue-600' : 'text-gray-500 hover:text-gray-700'"
                class="py-2 px-6 font-semibold transition">
                Data Produk & Stok
            </button>
        </div>

        <div x-show="tab === 'transaksi'" class="bg-white p-6 rounded-lg shadow">
            <h2 class="text-xl font-bold mb-4">Input Pembelian Baru</h2>
            <form action="/purchase" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10 bg-gray-50 p-4 rounded border">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Pilih Produk</label>
                    <select name="product_id" class="w-full border p-2 rounded focus:ring-blue-500 focus:border-blue-500">
                        <% products.forEach(p => { %>
                            <option value="<%= p.id %>"><%= p.name %> - Rp <%= p.price.toLocaleString() %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Jumlah (Qty)</label>
                    <input type="number" name="qty" placeholder="0" class="w-full border p-2 rounded" required min="1">
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded font-bold hover:bg-blue-700 transition">
                        Simpan Pembelian
                    </button>
                </div>
            </form>

            <h2 class="text-xl font-bold mb-4">Riwayat Pembelian</h2>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-gray-100 text-left">
                            <th class="p-3 border">Tanggal</th>
                            <th class="p-3 border">Produk</th>
                            <th class="p-3 border text-center">Qty</th>
                            <th class="p-3 border text-center">Status</th>
                            <th class="p-3 border text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchases.forEach(p => { %>
                        <tr class="hover:bg-gray-50 text-sm">
                            <td class="p-3 border text-gray-600"><%= p.createdAt.toLocaleString('id-ID') %> WIB</td>
                            <td class="p-3 border font-semibold"><%= p.Product.name %></td>
                            <td class="p-3 border text-center"><%= p.qty %></td>
                            <td class="p-3 border text-center">
                                <span class="px-2 py-1 rounded-full text-xs font-bold uppercase <%= p.status === 'cancelled' ? 'bg-red-100 text-red-600' : 'bg-green-100 text-green-600' %>">
                                    <%= p.status %>
                                </span>
                            </td>
                            <td class="p-3 border text-center">
                                <% if(p.status === 'success') { %>
                                    <form action="/cancel/<%= p.id %>" method="POST" onsubmit="return confirm('Batalkan transaksi ini?')">
                                        <button class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs">Cancel</button>
                                    </form>
                                <% } else { %>
                                    <span class="text-gray-400">-</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div x-show="tab === 'inventory'" class="bg-white p-6 rounded-lg shadow" x-cloak>
            <h2 class="text-xl font-bold mb-4">Database Produk & Stok</h2>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-blue-600 text-white text-left">
                            <th class="p-3 border">Nama Produk</th>
                            <th class="p-3 border">Harga Satuan</th>
                            <th class="p-3 border text-center">Stok Gudang</th>
                            <th class="p-3 border text-center">Total Terjual</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% inventoryData.forEach(item => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="p-3 border font-medium"><%= item.name %></td>
                            <td class="p-3 border text-gray-600">Rp <%= item.price.toLocaleString('id-ID') %></td>
                            <td class="p-3 border text-center">
                                <span class="text-lg font-bold <%= item.Stock.qty < 10 ? 'text-red-600' : 'text-green-600' %>">
                                    <%= item.Stock.qty %>
                                </span>
                            </td>
                            <td class="p-3 border text-center">
                                <% 
                                   let totalSold = item.Purchases
                                        .filter(p => p.status === 'success')
                                        .reduce((sum, p) => sum + p.qty, 0);
                                %>
                                <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full font-bold">
                                    <%= totalSold %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <style>
        [x-cloak] { display: none !important; }
    </style>
</body>
</html>